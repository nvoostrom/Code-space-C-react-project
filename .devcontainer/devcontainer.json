{
  "name": "Fabric Workload Dev",
  "image": "mcr.microsoft.com/devcontainers/dotnet:1-10.0",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/dapr/cli/dapr-cli:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "github.copilot-chat",
        "formulahendry.dotnet-test-explorer",
        "pkief.material-icon-theme",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "anthropic.claude-code"
      ],
      "settings": {
        "dotnet.defaultSolution": "small-simalar-project.sln",
        "workbench.iconTheme": "material-icon-theme",
        "workbench.colorTheme": "Default Dark Modern",
        "editor.formatOnSave": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": "active",
        "editor.minimap.enabled": false,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "dotnet workload install aspire && dotnet dev-certs https --trust && dapr init --slim && dotnet restore && cd src/fabric-workload/App && npm install",
  "forwardPorts": [5173, 15888],
  "portsAttributes": {
    "5173": {
      "label": "Frontend",
      "onAutoForward": "notify",
      "visibility": "private"
    },
    "15888": {
      "label": "Aspire Dashboard",
      "onAutoForward": "notify",
      "visibility": "private"
    },
    "5100": {
      "label": "SharedDataApi (internal)",
      "onAutoForward": "ignore"
    },
    "5200": {
      "label": "ContentApi (internal)",
      "onAutoForward": "ignore"
    }
  },
  "remoteUser": "vscode"
}
